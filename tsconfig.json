{
  "compilerOptions": {
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
        "ES2017",
        "DOM"
    ],
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES5",
    "outDir": "./dist",
    "typeRoots": [
      "./node_modules/@types/"
    ]
  },
  "exclude": [
    "./node_modules/*",
    "./dist/*"
  ]
}
